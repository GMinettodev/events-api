// backend/prisma/schema.prisma
// Configuração validada para Prisma v6.15.0 e MySQL

generator client {
  // Provider padrão e correto para Node.js na v6
  provider = "prisma-client-js" 
}

datasource db {
  // Provider: MySQL
  provider = "mysql"
  
  // SINTAXE CORRETA: usa a função env() para ler a variável COMPLETA do .env
  url      = env("DATABASE_URL")
}

// Modelo User (Usuários)
model User {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255)
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255) 
  role      String   @default("volunteer") 
  createdAt DateTime @default(now()) @map("created_at")

  eventsCreated Event[] @relation("EventCreator")

  @@map("users")
}

// Modelo Event (Eventos de Voluntariado)
model Event {
  id             Int      @id @default(autoincrement())
  title          String   @db.VarChar(150)
  description    String?  @db.Text
  date           DateTime @db.Date 
  location       String?  @db.VarChar(255)
  max_volunteers Int?     @default(50)
  
  createdById    Int?     @map("created_by") 
  creator        User?    @relation("EventCreator", fields: [createdById], references: [id])
  
  createdAt      DateTime @default(now()) @map("created_at")

  @@map("events")
}